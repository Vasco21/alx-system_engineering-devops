#!/usr/bin/env bash
# This script configures Nginx on a new Ubuntu machine to include a custom HTTP response header

# Install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Configure custom HTTP response header
echo 'add_header X-Served-By $hostname;' | sudo tee /etc/nginx/conf.d/custom-header.conf

# Restart Nginx
sudo service nginx restart
